mode $display_mode{
	bindsym 1 exec xrandr --output HDMI1 --auto && exec xrandr --output HDMI1 --left-of eDP1; mode "default"
	bindsym 2 exec xrandr --output HDMI1 --auto && exec xrandr --output HDMI1 --right-of eDP1; mode "default"
    bindsym 3 exec xrandr --output HDMI1 --off; mode "default"
	bindsym Return	mode "default"
	bindsym Escape	mode "default"
	}

set $display_mode "DISPLAY: [1] Left  [2] Right  [3] No HDMI"
